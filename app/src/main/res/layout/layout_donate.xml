<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    app:cardElevation="5dp"
    android:outlineSpotShadowColor="@color/colorTextView"
    android:outlineAmbientShadowColor="@color/colorTextView"
    android:layout_margin="10dp"
    android:background="@color/whiteCardColor">

    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Date"
                android:textColor="@color/colorTextView"
                android:textSize="16dp"/>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/donateDate"
                android:text="27-12-2019"
                android:layout_marginLeft="150dp"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"/>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@+id/donateDate"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/userGroupp"

                android:text="Camp"
                android:textColor="@color/colorTextView"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@+id/donateDate"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/donateCamp"

                android:layout_marginLeft="150dp"
                android:text="Vishal Blood Camp 2020"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"/>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@+id/donateCamp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"

                android:id="@+id/userAgee"
                android:text="Location"
                android:textColor="@color/colorTextView"
                android:textSize="16dp"/>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@+id/donateCamp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="150dp"
                android:id="@+id/donateLocation"
                android:text="Jodhpur"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"/>




        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
