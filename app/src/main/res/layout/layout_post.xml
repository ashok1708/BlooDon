<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="5dp"
 android:layout_margin="8dp"

    android:outlineSpotShadowColor="@color/colorTextView"
    android:outlineAmbientShadowColor="@color/colorTextView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="5dp">
        <TextView
            android:id="@+id/tvPostName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-condensed-medium"
            />

        <TextView
            android:id="@+id/tvPostdescr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/postDescription"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-condensed-light"
            />

        <ImageView
            android:id="@+id/ivPost"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="5dp"
            android:outlineAmbientShadowColor="@color/colorTextView"
            android:outlineSpotShadowColor="@color/colorTextView"
            android:src="@drawable/ashokimages"/>




    </LinearLayout>

</androidx.cardview.widget.CardView>